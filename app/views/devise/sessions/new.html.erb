<div class="min-h-screen flex bg-gray-50">
  <!-- Left side - Login Form -->
  <div class="flex-1 flex flex-col justify-center py-12 px-4 sm:px-6 lg:px-20 xl:px-24">
    <div class="mx-auto w-full max-w-sm lg:w-96">
      <div class="mb-8">
        <div class="flex items-center mb-6">
          <div class="w-10 h-10 bg-blue-600 rounded flex items-center justify-center text-white font-bold text-xl mr-3">
            M
          </div>
          <h1 class="text-2xl font-bold text-gray-900">Matchmaking Platform</h1>
        </div>
        <h2 class="text-3xl font-bold text-gray-900">Welcome back</h2>
        <p class="mt-2 text-sm text-gray-600">
          Please sign in to your account
        </p>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="space-y-6">
          <div>
            <%= f.label :email, "Email address", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "name@example.com",
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
          </div>

          <div>
            <div class="flex items-center justify-between mb-2">
              <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-700" %>
              <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm font-medium text-blue-600 hover:text-blue-500" %>
            </div>
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Enter your password",
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
              <%= f.label :remember_me, "Remember me for 30 days", class: "ml-2 block text-sm text-gray-700" %>
            </div>
          <% end %>

          <div>
            <%= f.submit "Sign in with Email", class: "w-full bg-blue-600 text-white py-3 px-4 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 font-medium transition-colors" %>
          </div>
        </div>
      <% end %>

      <div class="mt-6">
        <p class="text-center text-sm text-gray-600">
          Don't have an account?
          <%= link_to "Sign up", new_registration_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %>
        </p>
      </div>
    </div>
  </div>

  <!-- Right side - Hero/Branding -->
  <div class="hidden lg:flex lg:flex-1 bg-gradient-to-br from-blue-600 to-blue-800 relative overflow-hidden">
    <div class="absolute inset-0 bg-grid-white/10"></div>
    <div class="relative flex flex-col justify-center px-12 xl:px-20 text-white">
      <div class="mb-8">
        <h2 class="text-4xl font-bold mb-4">Intelligent Logistics Matching</h2>
        <p class="text-lg text-blue-100">
          Connect shippers with carriers through our advanced matchmaking platform.
        </p>
      </div>
      <div class="space-y-4">
        <div class="flex items-start">
          <svg class="w-6 h-6 mr-3 mt-1 text-blue-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <div>
            <h3 class="font-semibold mb-1">Geographic Matching</h3>
            <p class="text-blue-100 text-sm">Find carriers based on proximity and service radius</p>
          </div>
        </div>
        <div class="flex items-start">
          <svg class="w-6 h-6 mr-3 mt-1 text-blue-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <div>
            <h3 class="font-semibold mb-1">Fleet Capabilities</h3>
            <p class="text-blue-100 text-sm">Match cargo requirements with vehicle specifications</p>
          </div>
        </div>
        <div class="flex items-start">
          <svg class="w-6 h-6 mr-3 mt-1 text-blue-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <div>
            <h3 class="font-semibold mb-1">Automated Invitations</h3>
            <p class="text-blue-100 text-sm">Send offers to qualified carriers instantly</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
