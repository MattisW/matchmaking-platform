<% content_for :page_title, "Dashboard" %>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
  <!-- Stats Cards -->
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0 bg-green-100 rounded-md p-3">
        <svg class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Active Requests</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @active_requests.count %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0 bg-blue-100 rounded-md p-3">
        <svg class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Pending Offers</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @pending_offers_count %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0 bg-purple-100 rounded-md p-3">
        <svg class="h-6 w-6 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Total Requests</p>
        <p class="text-2xl font-semibold text-gray-900"><%= current_user.transport_requests.count %></p>
      </div>
    </div>
  </div>
</div>

<!-- Recent Requests -->
<div class="bg-white rounded-lg shadow">
  <div class="px-6 py-4 border-b border-gray-200">
    <h3 class="text-lg font-medium text-gray-900">Recent Requests</h3>
  </div>

  <% if @recent_requests.any? %>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Route</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Pickup Date</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @recent_requests.each do |request| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900">
                  <%= request.start_country %> â†’ <%= request.destination_country %>
                </div>
                <div class="text-sm text-gray-500"><%= request.distance_km %> km</div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= request.pickup_date_from&.strftime("%d.%m.%Y") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full
                  <%= case request.status
                      when 'new', 'matching' then 'bg-yellow-100 text-yellow-800'
                      when 'matched' then 'bg-green-100 text-green-800'
                      when 'in_transit' then 'bg-blue-100 text-blue-800'
                      when 'delivered' then 'bg-gray-100 text-gray-800'
                      when 'cancelled' then 'bg-red-100 text-red-800'
                      else 'bg-gray-100 text-gray-800'
                      end %>">
                  <%= request.status&.titleize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to "View", customer_transport_request_path(request), class: "text-green-600 hover:text-green-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="px-6 py-12 text-center">
      <p class="text-gray-500">No transport requests yet.</p>
      <%= link_to "Create your first request", new_customer_transport_request_path, class: "mt-4 inline-block px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700" %>
    </div>
  <% end %>
</div>
