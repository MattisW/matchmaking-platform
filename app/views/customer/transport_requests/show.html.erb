<% content_for :page_title, "Request ##{@transport_request.id}" %>

<%= render 'quote_card', transport_request: @transport_request %>

<div class="bg-white rounded-lg shadow p-6 mb-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Transport Request #<%= @transport_request.id %></h1>
    <div class="space-x-2">
      <% if @transport_request.status == 'new' %>
        <%= link_to "Edit", edit_customer_transport_request_path(@transport_request), class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
      <% end %>
      <% unless ['cancelled', 'delivered'].include?(@transport_request.status) %>
        <%= button_to "Cancel Request", cancel_customer_transport_request_path(@transport_request), method: :post, class: "px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700", data: { confirm: 'Are you sure?' } %>
      <% end %>
      <%= link_to "Back", customer_transport_requests_path, class: "px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600" %>
    </div>
  </div>

  <dl class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
    <div>
      <dt class="text-sm font-medium text-gray-500">From</dt>
      <dd class="mt-1 text-sm text-gray-900"><%= @transport_request.start_address %> (<%= @transport_request.start_country %>)</dd>
    </div>

    <div>
      <dt class="text-sm font-medium text-gray-500">To</dt>
      <dd class="mt-1 text-sm text-gray-900"><%= @transport_request.destination_address %> (<%= @transport_request.destination_country %>)</dd>
    </div>

    <div>
      <dt class="text-sm font-medium text-gray-500">Distance</dt>
      <dd class="mt-1 text-sm text-gray-900"><%= @transport_request.distance_km %> km</dd>
    </div>

    <div>
      <dt class="text-sm font-medium text-gray-500">Status</dt>
      <dd class="mt-1">
        <span class="px-2 py-1 text-xs font-semibold rounded-full
          <%= case @transport_request.status
              when 'new', 'matching' then 'bg-yellow-100 text-yellow-800'
              when 'matched' then 'bg-green-100 text-green-800'
              when 'in_transit' then 'bg-blue-100 text-blue-800'
              when 'delivered' then 'bg-gray-100 text-gray-800'
              when 'cancelled' then 'bg-red-100 text-red-800'
              else 'bg-gray-100 text-gray-800'
              end %>">
          <%= @transport_request.status&.titleize %>
        </span>
      </dd>
    </div>

    <div>
      <dt class="text-sm font-medium text-gray-500">Pickup Date</dt>
      <dd class="mt-1 text-sm text-gray-900"><%= @transport_request.pickup_date_from&.strftime("%d.%m.%Y %H:%M") %></dd>
    </div>

    <div>
      <dt class="text-sm font-medium text-gray-500">Delivery Date</dt>
      <dd class="mt-1 text-sm text-gray-900"><%= @transport_request.delivery_date_from&.strftime("%d.%m.%Y %H:%M") %></dd>
    </div>

    <div>
      <dt class="text-sm font-medium text-gray-500">Vehicle Type</dt>
      <dd class="mt-1 text-sm text-gray-900"><%= @transport_request.vehicle_type&.titleize %></dd>
    </div>

    <div>
      <dt class="text-sm font-medium text-gray-500">Cargo Weight</dt>
      <dd class="mt-1 text-sm text-gray-900"><%= @transport_request.cargo_weight_kg %> kg</dd>
    </div>
  </dl>

  <% if @transport_request.start_latitude && @transport_request.destination_latitude %>
    <div class="mb-6">
      <h3 class="text-lg font-semibold mb-3">Route Map</h3>
      <div data-controller="map"
           data-map-start-lat-value="<%= @transport_request.start_latitude %>"
           data-map-start-lng-value="<%= @transport_request.start_longitude %>"
           data-map-dest-lat-value="<%= @transport_request.destination_latitude %>"
           data-map-dest-lng-value="<%= @transport_request.destination_longitude %>">
        <div data-map-target="container" style="height: 400px; width: 100%; border-radius: 0.5rem;"></div>
      </div>
    </div>
  <% end %>

  <% if @carrier_requests.any? %>
    <h2 class="text-xl font-bold mt-8 mb-4">Received Offers (<%= @carrier_requests.count %>)</h2>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Carrier</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Price</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Delivery Date</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @carrier_requests.each do |cr| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <%= cr.carrier.company_name %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <% if cr.offered_price %>
                  â‚¬<%= number_with_precision(cr.offered_price, precision: 2) %>
                <% else %>
                  -
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= cr.offered_delivery_date&.strftime("%d.%m.%Y") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 py-1 text-xs font-semibold rounded-full
                  <%= case cr.status
                      when 'offered' then 'bg-blue-100 text-blue-800'
                      when 'won' then 'bg-green-100 text-green-800'
                      when 'rejected' then 'bg-red-100 text-red-800'
                      else 'bg-gray-100 text-gray-800'
                      end %>">
                  <%= cr.status&.titleize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                <% if cr.status == 'offered' %>
                  <%= button_to "Accept", accept_customer_transport_request_carrier_request_path(@transport_request, cr),
                      method: :post,
                      class: "text-green-600 hover:text-green-900",
                      data: { confirm: 'Accept this offer? All other offers will be rejected.' } %>
                  <%= button_to "Reject", reject_customer_transport_request_carrier_request_path(@transport_request, cr),
                      method: :post,
                      class: "text-red-600 hover:text-red-900" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="mt-8 p-6 bg-gray-50 rounded-lg text-center">
      <p class="text-gray-500">
        <% if @transport_request.status == 'new' %>
          No carriers matched yet. Click "Run Matching" above to find carriers.
        <% elsif @transport_request.status == 'matching' %>
          Finding carriers... Offers will appear here when carriers respond.
        <% else %>
          No offers received yet.
        <% end %>
      </p>
    </div>
  <% end %>
</div>
