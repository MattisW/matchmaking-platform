<% content_for :page_title, "My Transport Requests" %>

<div class="bg-white rounded-lg shadow">
  <% if @transport_requests.any? %>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Route</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Pickup Date</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Vehicle</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @transport_requests.each do |request| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4">
                <div class="text-sm font-medium text-gray-900">
                  <%= request.start_country %> â†’ <%= request.destination_country %>
                </div>
                <div class="text-sm text-gray-500"><%= request.distance_km %> km</div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= request.pickup_date_from&.strftime("%d.%m.%Y") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 py-1 text-xs font-semibold rounded bg-blue-100 text-blue-800">
                  <%= request.vehicle_type&.titleize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full
                  <%= case request.status
                      when 'new', 'matching' then 'bg-yellow-100 text-yellow-800'
                      when 'matched' then 'bg-green-100 text-green-800'
                      when 'in_transit' then 'bg-blue-100 text-blue-800'
                      when 'delivered' then 'bg-gray-100 text-gray-800'
                      when 'cancelled' then 'bg-red-100 text-red-800'
                      else 'bg-gray-100 text-gray-800'
                      end %>">
                  <%= request.status&.titleize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                <%= link_to "View", customer_transport_request_path(request), class: "text-green-600 hover:text-green-900" %>
                <% unless ['matched', 'in_transit', 'delivered', 'cancelled'].include?(request.status) %>
                  <%= link_to "Edit", edit_customer_transport_request_path(request), class: "text-blue-600 hover:text-blue-900" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="px-6 py-12 text-center">
      <p class="text-gray-500 mb-4">You haven't created any transport requests yet.</p>
      <%= link_to "Create Request", new_customer_transport_request_path, class: "px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700" %>
    </div>
  <% end %>
</div>
