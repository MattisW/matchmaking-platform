<%= form_with(model: [:admin, @transport_request], local: true, class: "space-y-6") do |f| %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :start_address, "Pickup Address", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_field :start_address, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :destination_address, "Delivery Address", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_field :destination_address, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :pickup_date_from, "Pickup Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.datetime_field :pickup_date_from, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :delivery_date_from, "Delivery Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.datetime_field :delivery_date_from, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :vehicle_type, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.select :vehicle_type, [['Transporter', 'transporter'], ['LKW', 'lkw'], ['Either', 'either']], {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :cargo_weight_kg, "Weight (kg)", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.number_field :cargo_weight_kg, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  </div>

  <div class="grid grid-cols-3 gap-4">
    <div class="flex items-center">
      <%= f.check_box :requires_liftgate, class: "h-4 w-4 text-blue-600" %>
      <%= f.label :requires_liftgate, "Liftgate", class: "ml-2 text-sm" %>
    </div>

    <div class="flex items-center">
      <%= f.check_box :requires_pallet_jack, class: "h-4 w-4 text-blue-600" %>
      <%= f.label :requires_pallet_jack, "Pallet Jack", class: "ml-2 text-sm" %>
    </div>

    <div class="flex items-center">
      <%= f.check_box :requires_gps_tracking, class: "h-4 w-4 text-blue-600" %>
      <%= f.label :requires_gps_tracking, "GPS", class: "ml-2 text-sm" %>
    </div>
  </div>

  <div class="flex justify-end space-x-4">
    <%= link_to "Cancel", admin_transport_requests_path, class: "px-4 py-2 border rounded text-gray-700 hover:bg-gray-50" %>
    <%= f.submit class: "px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 font-medium" %>
  </div>
<% end %>
