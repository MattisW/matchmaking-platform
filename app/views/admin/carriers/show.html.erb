<% content_for :page_title, @carrier.company_name %>

<div class="bg-white rounded-lg shadow p-6 mb-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold"><%= @carrier.company_name %></h1>
    <div class="space-x-2">
      <%= link_to "Edit", edit_admin_carrier_path(@carrier), class: "px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600" %>
      <%= link_to "Back", admin_carriers_path, class: "px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600" %>
    </div>
  </div>

  <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <dt class="text-sm font-medium text-gray-500">Email</dt>
      <dd class="mt-1 text-sm text-gray-900"><%= @carrier.contact_email %></dd>
    </div>

    <div>
      <dt class="text-sm font-medium text-gray-500">Phone</dt>
      <dd class="mt-1 text-sm text-gray-900"><%= @carrier.contact_phone %></dd>
    </div>

    <div>
      <dt class="text-sm font-medium text-gray-500">Country</dt>
      <dd class="mt-1 text-sm text-gray-900"><%= @carrier.country %></dd>
    </div>

    <div>
      <dt class="text-sm font-medium text-gray-500">Language</dt>
      <dd class="mt-1 text-sm text-gray-900"><%= @carrier.language&.upcase %></dd>
    </div>

    <div class="md:col-span-2">
      <dt class="text-sm font-medium text-gray-500">Address</dt>
      <dd class="mt-1 text-sm text-gray-900"><%= @carrier.address %></dd>
    </div>

    <div>
      <dt class="text-sm font-medium text-gray-500">Fleet</dt>
      <dd class="mt-1">
        <% if @carrier.has_transporter %>
          <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-xs mr-1">Transporter</span>
        <% end %>
        <% if @carrier.has_lkw %>
          <span class="bg-green-100 text-green-800 px-2 py-1 rounded text-xs">LKW</span>
        <% end %>
      </dd>
    </div>

    <div>
      <dt class="text-sm font-medium text-gray-500">Equipment</dt>
      <dd class="mt-1">
        <% if @carrier.has_liftgate %>
          <span class="bg-purple-100 text-purple-800 px-2 py-1 rounded text-xs mr-1">Liftgate</span>
        <% end %>
        <% if @carrier.has_pallet_jack %>
          <span class="bg-orange-100 text-orange-800 px-2 py-1 rounded text-xs">Pallet Jack</span>
        <% end %>
      </dd>
    </div>
  </dl>
</div>
