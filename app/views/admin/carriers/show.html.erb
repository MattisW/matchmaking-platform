<% content_for :page_title, @carrier.company_name %>

<div class="bg-white rounded-lg shadow">
  <!-- Header -->
  <div class="border-b border-gray-200 px-6 py-4">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-2xl font-bold text-gray-900"><%= @carrier.company_name %></h1>
        <p class="text-sm text-gray-500 mt-1">
          <%= @carrier.country %>
          <% if @carrier.blacklisted %>
            <span class="ml-2 px-2 py-1 bg-red-100 text-red-800 text-xs font-medium rounded">Blacklisted</span>
          <% end %>
        </p>
      </div>

      <div class="space-x-2">
        <%= link_to "Edit", edit_admin_carrier_path(@carrier), class: "px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600" %>
        <%= link_to "Back", admin_carriers_path, class: "px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600" %>
      </div>
    </div>
  </div>

  <!-- Tabs -->
  <div class="border-b border-gray-200" data-controller="tabs">
    <nav class="flex -mb-px px-6" aria-label="Tabs">
      <button data-tabs-target="tab" data-action="click->tabs#show"
              class="py-4 px-6 border-b-2 font-medium text-sm whitespace-nowrap">
        Overview
      </button>
      <button data-tabs-target="tab" data-action="click->tabs#show"
              class="py-4 px-6 border-b-2 font-medium text-sm whitespace-nowrap">
        Transport History
      </button>
      <button data-tabs-target="tab" data-action="click->tabs#show"
              class="py-4 px-6 border-b-2 font-medium text-sm whitespace-nowrap">
        Coverage Area
      </button>
      <button data-tabs-target="tab" data-action="click->tabs#show"
              class="py-4 px-6 border-b-2 font-medium text-sm whitespace-nowrap">
        Equipment & Fleet
      </button>
    </nav>
  </div>

  <!-- Tab Panels -->
  <div class="p-6">
    <!-- Overview Tab -->
    <div data-tabs-target="panel">
      <%= render 'overview', carrier: @carrier %>
    </div>

    <!-- Transport History Tab -->
    <div data-tabs-target="panel" class="hidden">
      <%= render 'transport_history', carrier: @carrier, carrier_requests: @carrier_requests %>
    </div>

    <!-- Coverage Area Tab -->
    <div data-tabs-target="panel" class="hidden">
      <%= render 'coverage', carrier: @carrier %>
    </div>

    <!-- Equipment & Fleet Tab -->
    <div data-tabs-target="panel" class="hidden">
      <%= render 'equipment', carrier: @carrier %>
    </div>
  </div>
</div>
