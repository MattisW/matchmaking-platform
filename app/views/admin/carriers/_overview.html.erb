<!-- Statistics Cards -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
  <!-- Total Jobs -->
  <div class="bg-blue-50 rounded-lg p-4">
    <div class="text-sm font-medium text-blue-600">Total Jobs</div>
    <div class="mt-2 text-3xl font-bold text-blue-900"><%= @total_jobs %></div>
  </div>

  <!-- Won Jobs -->
  <div class="bg-green-50 rounded-lg p-4">
    <div class="text-sm font-medium text-green-600">Won Jobs</div>
    <div class="mt-2 text-3xl font-bold text-green-900"><%= @won_jobs %></div>
  </div>

  <!-- Success Rate -->
  <div class="bg-purple-50 rounded-lg p-4">
    <div class="text-sm font-medium text-purple-600">Success Rate</div>
    <div class="mt-2 text-3xl font-bold text-purple-900"><%= @success_rate %>%</div>
    <div class="text-xs text-purple-600 mt-1"><%= @won_jobs %> won / <%= @total_offers %> offered</div>
  </div>

  <!-- Average Rating -->
  <div class="bg-yellow-50 rounded-lg p-4">
    <div class="text-sm font-medium text-yellow-600">Average Rating</div>
    <div class="mt-2 text-3xl font-bold text-yellow-900">
      <%= @average_rating %>
      <span class="text-base text-yellow-600">/ 5.0</span>
    </div>
  </div>
</div>

<!-- Location Map -->
<% if carrier.latitude && carrier.longitude %>
  <div class="mb-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-3">Location</h3>
    <div data-controller="map"
         data-map-single-lat-value="<%= carrier.latitude %>"
         data-map-single-lng-value="<%= carrier.longitude %>">
      <div data-map-target="container" style="height: 300px; width: 100%; border-radius: 0.5rem;" class="border border-gray-200"></div>
    </div>
  </div>
<% end %>

<!-- Contact Information -->
<div class="mb-6">
  <h3 class="text-lg font-semibold text-gray-900 mb-3">Contact Information</h3>
  <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <dt class="text-sm font-medium text-gray-500">Email</dt>
      <dd class="mt-1 text-sm text-gray-900">
        <a href="mailto:<%= carrier.contact_email %>" class="text-blue-600 hover:text-blue-800">
          <%= carrier.contact_email %>
        </a>
      </dd>
    </div>

    <div>
      <dt class="text-sm font-medium text-gray-500">Phone</dt>
      <dd class="mt-1 text-sm text-gray-900">
        <% if carrier.contact_phone.present? %>
          <a href="tel:<%= carrier.contact_phone %>" class="text-blue-600 hover:text-blue-800">
            <%= carrier.contact_phone %>
          </a>
        <% else %>
          <span class="text-gray-400">Not provided</span>
        <% end %>
      </dd>
    </div>

    <div>
      <dt class="text-sm font-medium text-gray-500">Preferred Contact Method</dt>
      <dd class="mt-1 text-sm text-gray-900 capitalize">
        <%= carrier.preferred_contact_method || 'Not specified' %>
      </dd>
    </div>

    <div>
      <dt class="text-sm font-medium text-gray-500">Language</dt>
      <dd class="mt-1 text-sm text-gray-900">
        <%= carrier.language&.upcase || 'Not specified' %>
      </dd>
    </div>

    <div class="md:col-span-2">
      <dt class="text-sm font-medium text-gray-500">Address</dt>
      <dd class="mt-1 text-sm text-gray-900">
        <%= carrier.address || 'Not provided' %>
      </dd>
    </div>
  </dl>
</div>

<!-- Fleet & Basic Equipment -->
<div>
  <h3 class="text-lg font-semibold text-gray-900 mb-3">Quick Fleet Overview</h3>
  <div class="flex flex-wrap gap-2">
    <% if carrier.has_transporter %>
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
        ğŸš Transporter
      </span>
    <% end %>

    <% if carrier.has_lkw %>
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
        ğŸšš LKW
      </span>
    <% end %>

    <% if carrier.has_liftgate %>
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800">
        â†•ï¸ Liftgate
      </span>
    <% end %>

    <% if carrier.has_pallet_jack %>
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-orange-100 text-orange-800">
        ğŸ”§ Pallet Jack
      </span>
    <% end %>

    <% if carrier.has_gps_tracking %>
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800">
        ğŸ“ GPS Tracking
      </span>
    <% end %>

    <% if !carrier.has_transporter && !carrier.has_lkw %>
      <span class="text-sm text-gray-500 italic">No fleet information available</span>
    <% end %>
  </div>
</div>

<!-- Internal Notes (if any) -->
<% if carrier.notes.present? %>
  <div class="mt-6 p-4 bg-gray-50 rounded-lg">
    <h3 class="text-sm font-semibold text-gray-700 mb-2">Internal Notes</h3>
    <p class="text-sm text-gray-600 whitespace-pre-wrap"><%= carrier.notes %></p>
  </div>
<% end %>
