<% content_for :page_title, t('pricing_rules.title') %>

<div class="p-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold"><%= t('pricing_rules.title') %></h1>
    <%= link_to t('pricing_rules.new'), new_admin_pricing_rule_path,
        class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
  </div>

  <div class="bg-white shadow rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t('pricing_rules.vehicle_type') %>
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t('pricing_rules.rate_per_km') %>
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t('pricing_rules.minimum_price') %>
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t('pricing_rules.weekend_surcharge') %>
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t('pricing_rules.express_surcharge') %>
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t('pricing_rules.status') %>
          </th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t('actions.title') %>
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% if @pricing_rules.empty? %>
          <tr>
            <td colspan="7" class="px-6 py-4 text-center text-gray-500">
              <%= t('pricing_rules.no_rules') %>
            </td>
          </tr>
        <% else %>
          <% @pricing_rules.each do |rule| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="font-medium text-gray-900">
                  <%= rule.vehicle_type_name %>
                </div>
                <div class="text-sm text-gray-500">
                  <%= rule.vehicle_type %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-900">
                €<%= number_with_precision(rule.rate_per_km, precision: 2) %>/km
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-900">
                €<%= number_with_precision(rule.minimum_price, precision: 2) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-900">
                <%= number_with_precision(rule.weekend_surcharge_percent, precision: 1) %>%
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-900">
                <%= number_with_precision(rule.express_surcharge_percent, precision: 1) %>%
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if rule.active %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                    <%= t('pricing_rules.active') %>
                  </span>
                <% else %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                    <%= t('pricing_rules.inactive') %>
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                <%= link_to t('actions.edit'), edit_admin_pricing_rule_path(rule),
                    class: "text-blue-600 hover:text-blue-900" %>
                <%= button_to t('actions.delete'), admin_pricing_rule_path(rule), method: :delete,
                    data: { turbo_confirm: t('pricing_rules.confirm_delete') },
                    class: "text-red-600 hover:text-red-900" %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
