<%= form_with(model: [:admin, pricing_rule], local: true, class: "space-y-6") do |f| %>
  <% if pricing_rule.errors.any? %>
    <div class="bg-red-50 border border-red-400 text-red-700 px-4 py-3 rounded">
      <p class="font-bold"><%= t('flash.error') %></p>
      <ul class="list-disc list-inside">
        <% pricing_rule.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :vehicle_type, t('pricing_rules.vehicle_type'), class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.select :vehicle_type,
        options_for_select(PricingRule::VEHICLE_TYPES.map { |vt| [t("pricing_rules.vehicle_types.#{vt}", default: vt.humanize), vt] }, pricing_rule.vehicle_type),
        { include_blank: t('pricing_rules.select_vehicle_type') },
        class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :rate_per_km, t('pricing_rules.rate_per_km'), class: "block text-sm font-medium text-gray-700 mb-2" %>
      <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <span class="text-gray-500 sm:text-sm">€</span>
        </div>
        <%= f.number_field :rate_per_km, step: 0.01, min: 0,
            class: "w-full border border-gray-300 rounded-md pl-7 pr-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
          <span class="text-gray-500 sm:text-sm">/km</span>
        </div>
      </div>
    </div>

    <div>
      <%= f.label :minimum_price, t('pricing_rules.minimum_price'), class: "block text-sm font-medium text-gray-700 mb-2" %>
      <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <span class="text-gray-500 sm:text-sm">€</span>
        </div>
        <%= f.number_field :minimum_price, step: 0.01, min: 0,
            class: "w-full border border-gray-300 rounded-md pl-7 pr-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :weekend_surcharge_percent, t('pricing_rules.weekend_surcharge'), class: "block text-sm font-medium text-gray-700 mb-2" %>
      <div class="relative">
        <%= f.number_field :weekend_surcharge_percent, step: 0.1, min: 0,
            class: "w-full border border-gray-300 rounded-md pr-10 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
          <span class="text-gray-500 sm:text-sm">%</span>
        </div>
      </div>
      <p class="mt-1 text-sm text-gray-500"><%= t('pricing_rules.weekend_help') %></p>
    </div>

    <div>
      <%= f.label :express_surcharge_percent, t('pricing_rules.express_surcharge'), class: "block text-sm font-medium text-gray-700 mb-2" %>
      <div class="relative">
        <%= f.number_field :express_surcharge_percent, step: 0.1, min: 0,
            class: "w-full border border-gray-300 rounded-md pr-10 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
          <span class="text-gray-500 sm:text-sm">%</span>
        </div>
      </div>
      <p class="mt-1 text-sm text-gray-500"><%= t('pricing_rules.express_help') %></p>
    </div>
  </div>

  <div>
    <label class="flex items-center">
      <%= f.check_box :active, class: "h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
      <span class="ml-2 text-sm text-gray-700"><%= t('pricing_rules.active_label') %></span>
    </label>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to t('actions.cancel'), admin_pricing_rules_path,
        class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50" %>
    <%= f.submit t('actions.save'),
        class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
  </div>
<% end %>
